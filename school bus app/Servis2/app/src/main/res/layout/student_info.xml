<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent.StudentInfo">

    <EditText
        android:id="@+id/s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Ad"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/s_surname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/s_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Soyad"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/sc_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_name" />

    <EditText
        android:id="@+id/sc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Okul ismi"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/s_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_surname" />

    <EditText
        android:id="@+id/s_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Öğrencinin yaşı"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/register_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sc_name" />

    <Button
        android:id="@+id/register_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="232dp"
        android:onClick="registerStudent"
        android:text="Tamamla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_age" />
</androidx.constraintlayout.widget.ConstraintLayout>