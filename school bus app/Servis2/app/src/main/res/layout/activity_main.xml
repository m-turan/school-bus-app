<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="265dp"
        android:onClick="parentScreen"
        android:text="Veli Girişi"
        app:layout_constraintBottom_toTopOf="@+id/driver"
        app:layout_constraintEnd_toEndOf="@+id/driver"
        app:layout_constraintStart_toStartOf="@+id/driver"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="373dp"
        android:onClick="driverScreen"
        android:text="Şoför Girişi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent" />
</androidx.constraintlayout.widget.ConstraintLayout>